<%- include ('./partials/header') %>

    <body>
        <%- include ('./partials/navigation') %>
        <div class="container d-flex align-items-center justify-content-center">
            <div class="row">
                <div class="card" style="width:min-content;">
                    <div class="card-body">
                        <div class="bg-primary d-flex justify-content-center rounded p-3 mb-2" style="width: 350px;">
                            <img src="/img/user.png" alt="user icon" style="width: 10rem;">
                        </div>
                        <h3 class="card-title">Nombre: <%= name %>
                        </h3>
                        <h5 class="card-title">Telefono: <%= phone %><br>
                        Email: <a href="mailto:<%= email %>"><%= email %> </a>
                        </h5>
                        <div class="card-text">
                            <%= description %>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                        </div>

                        <div class="form-group">
                            <form action="/edituser" method="post">
                                <div class="form-group">
                                    <input name="id" value="<%= id %>" hidden>
                                    <label for="name" class="form-label"></label>
                                    <input type="text" name="name" id="name" class="form-control" placeholder="Nombre" autofocus>
                                </div>
                                <div class="form-group">
                                    <label for="phone" class="form-label"></label>
                                    <input type="text" name="phone" id="phone" class="form-control" placeholder="Tel&eacute;fono" >                        </div>
                                <div class="form-group">
                                    <label for="email" class="form-label"></label>
                                    <input type="text" name="email" id="email" class="form-control" placeholder="Correo" >
                                </div>
                                <div class="form-group">
                                    <textarea name="description" id="description" class="form-control" rows="2"></textarea>
                                </div>
                                <div class="d-grid gap-2">
                                    <input type="submit" value="Actualizar" class="btn btn-primary">
                                </div>
                            </form>
                        </div>



                    </div>
                </div>
            </div>
    </body>
    </html>